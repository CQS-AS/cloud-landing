#inviteModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='inviteModalLabel', aria-hidden='true')
    .modal-dialog.modal-lg
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal')
                    span(aria-hidden='true') Ã—
                    span.sr-only Close
                h4#inviteModalLabel.modal-title Request an Invite
            .modal-body
                form.form-horizontal
                    .row
                        .col-xs-6
                            .form-group
                                label.control-label.col-xs-4 First Name
                                .col-xs-8
                                    input.form-control(type="text")

                        .col-xs-6
                            .form-group
                                label.control-label.col-xs-4 Last Name
                                .col-xs-8
                                    input.form-control(type="text")

            .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Close
                button.btn.btn-primary(type='button') Submit Request